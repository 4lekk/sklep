<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="1" author="bob">
        <createTable tableName="items">
            <column name="product_id" type="integer" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(80)"/>
            <column name="price" type="real">
                <constraints checkConstraint="CHECK (price >= 0)"/>
            </column>
            <column name="weight" type="real">
                <constraints checkConstraint="CHECK (weight >= 0)"/>
            </column>
            <column name="added_on" type="timestamp"/>
            <column name="description" type="text"/>
        </createTable>
    </changeSet>
</databaseChangeLog>